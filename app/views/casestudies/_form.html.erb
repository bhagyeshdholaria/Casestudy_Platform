<%= form_with model: casestudy do |f| %>
  <%= render 'shared/form_errors', form: f %>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :duration %>
    <%= f.text_field :duration, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :scale %>
    <%= f.text_field :scale, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :passkey %>
    <%= f.text_field :passkey, class: 'form-control' %>
  </div>

  <%= f.button 'Save', class: 'btn btn-success' %>
<% end %>
